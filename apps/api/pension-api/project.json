{
  "name": "pension-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/pension-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {

    "migrate-dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx prisma migrate dev --schema=./apps/api/pension-api/prisma/schema.prisma"],
        "parallel": false
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx prisma migrate deploy --schema=./apps/api/pension-api/prisma/schema.prisma", "ts-node ./apps/api/pension-api/prisma/seed.ts"],
        "parallel": false
      }
    },
    "serve": {
      "dependsOn": ["migrate"],
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "pension-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "pension-api:build:development"
        },
        "production": {
          "buildTarget": "pension-api:build:production"
        }
      }
    }
  }
}
